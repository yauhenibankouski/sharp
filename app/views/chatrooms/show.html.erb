<h1>#<%= @chatroom.id %></h1>
<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% @chatroom.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for @message, url: booking_shared_training_plan_chatroom_messages_path(@booking.id, @shared_training_plan.id, @chatroom.id) do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.id}" %>
<% end %>
