<% if current_user %>
  <div class="jumbotron home d-flex align-items-center text-light bg-gradient">
    <% if current_user.avatar.key %>
        <%= cl_image_tag current_user.avatar.key, crop: :fill, class: 'avatar mr-2'%>
    <% end %>
    <h2 class="m-0"><%= current_user.first_name.capitalize %>'s dashboard</h2>
  </div>
  <div class="container h-100">
    <h5 class="text-muted m-0">My overview</h5>
    <div class="dashboard-grid mt-2">
      <%= link_to trainers_bookings_path, class: "text-center text-dark" do %>
        <i class="p-3 fas fa-user-tag"></i>
        <h6 class="fs-md">My trainers</h6>
      <% end %>

      <%= link_to bookings_path, class: "text-center text-dark" do %>
        <i class="p-3 fas fa-running"></i>
        <h6 class="fs-md">Find a trainer</h6>
      <% end %>

      <%= link_to training_plans_path, class: "text-center text-dark" do %>
        <i class="p-3 fas fa-dumbbell"></i>
        <h6 class="fs-md">My trainings</h6>
      <% end %>

      <%= link_to clients_bookings_path, class: "text-center text-dark" do %>
        <i class="p-3 fas fa-users"></i>
        <h6 class="fs-md">My clients</h6>
      <% end %>

      <%= link_to all_exercises_bookings_path, class: "text-center text-dark" do %>
        <i class="p-3 fas fa-search"></i>
        <h6 class="fs-md">My exercises</h6>
      <% end %>

      <%= link_to new_training_plan_path, class: "text-center text-dark" do %>
        <i class="p-3 fas fa-plus"></i>
        <h6 class="fs-md">Create training</h6>
      <% end %>

      <%= link_to new_exercise_path, class: "text-center text-dark" do %>
        <i class="p-3 fas fa-plus"></i>
        <h6 class="fs-md">Create exercise</h6>
      <% end %>

    </div>
  </div>

<% else %>
      <div class="bg-image">
        <h1 class='brand'>SHARP</h1>
          <%= image_tag("home2.jpg") %>
          <div class="row buttons">
            <div class="col-6"><%= link_to "Log in", user_session_path, class: 'button-transparent' %></div>
            <div class="col-6"><%= link_to "Sign up", new_user_registration_path, class: 'button-transparent' %></div>
          </div>
      </div>
<% end %>
