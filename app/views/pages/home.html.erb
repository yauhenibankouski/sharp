<div class="container">
  <% if current_user %>
    <div class="jumbotron align-items-center bg-dark text-light">
      <h2 class="mt-4"><%= current_user.first_name.capitalize %></h2>
      <h5>Dashboard</h5>
    </div>

    <div class="container">
      <h5 class="text-muted m-0">My overview</h5>
      <div class="dashboard-grid mt-2">
        <%= link_to trainers_bookings_path, class: "text-center text-dark" do %>
          <i class="p-3 fas fa-user-tag"></i>
          <h6 class="fs-md">My trainers</h6>
        <% end %>

        <%= link_to bookings_path, class: "text-center text-dark" do %>
          <i class="p-3 fas fa-search"></i>
          <h6 class="fs-md">Pick an expert</h6>
        <% end %>

        <%= link_to training_plans_path, class: "text-center text-dark" do %>
          <i class="p-3 fas fa-dumbbell"></i>
          <h6 class="fs-md">My trainings</h6>
        <% end %>

        <%= link_to clients_bookings_path, class: "text-center text-dark" do %>
          <i class="p-3 fas fa-users"></i>
          <h6 class="fs-md">My clients</h6>
        <% end %>

        <%= link_to new_training_plan_path, class: "text-center text-dark" do %>
          <i class="p-3 fas fa-plus"></i>
          <h6 class="fs-md">Create training</h6>
        <% end %>

        <%= link_to new_exercise_path, class: "text-center text-dark" do %>
          <i class="p-3 fas fa-plus"></i>
          <h6 class="fs-md">Create exercise</h6>
        <% end %>

      </div>
    </div>
  <% else %>
    <div class="container-fluid">
      <div class="card text-center">
        <div class="card-header">
          SHARP
        </div>
        <%= image_tag("exercise.png") %>
        <div class="row">
        <div class="card col-sm-6 justify-content-center">
        <%= link_to "Log in", user_session_path, class: 'btn btn-primary m-5' %>
        </div>
        <div class="card col-sm-6 justify-content-center">
        <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-primary m-5' %>
        </div>
        </div>
      </div>
      <div class="card-footer text-muted">
        <p>Keep track on your progress and start training</p>
      </div>
    </div>
  <% end %>
</div>