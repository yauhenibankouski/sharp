<div class="form mt-2">
    <%= simple_form_for @training_plan do |f| %>
      <%= f.input :exercise_id, collection: current_user.exercises, required: true %>
        <%= simple_form_for @training do |f| %>
            <%= f.input :title %>
            <%= f.input :description %>
            <%= f.input :activity %>
            <%= f.submit 'Add training', class: 'button-orange' %>
        <% end %>
    <% end %>
</div>
