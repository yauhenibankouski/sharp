<div class="jumbotron d-flex align-items-center text-light" style="background-color:var(--orange)"> 
  <h2>
    <%= link_to root_path do %>
      <i class="fas fa-angle-left pr-3 text-light"></i>
    <% end %>
  </h2>
  <div class="container text-center">
    <h2 class="font-weight-bold">My trainings</h2>
  </div>
</div>

<div class='container h-100'>
  <% unless @training_plans.empty? %>
      <% @training_plans.each do |training_plan| %>
        <div class="card-general">
          <h5 class="card-title"><%= training_plan.training.title %></h5>
          <%= link_to 'Show', training_plan %>
          <%= link_to 'Edit', edit_training_plan_path(training_plan) %>
          <%= link_to 'Delete', training_plan, method: :delete, remote: true %>
        </div>
      <% end %>
  <% else %>
    <p>You don't have any training plans created yet.</p>
  <% end %>
</div>
