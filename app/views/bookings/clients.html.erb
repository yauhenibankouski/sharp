<div class="jumbotron d-flex align-items-center bg-orange text-light">
<h2>
    <%= link_to root_path do %>
      <i class="fas fa-angle-left pr-3 text-light"></i>
    <% end %>
  </h2>
  <div class="container text-center">
    <h2 class="font-weight-bold">My clients</h2>
  </div>
</div>

<div class="container h-100">
  <% unless @bookings.empty? %>
    <div id="booking-requests">
      <%= render 'booking', pending_bookings: @pending_bookings, rejected_bookings: @rejected_bookings %>
    </div>

    <h3 class="text-muted m-0">Clients</h3>
    <% @accepted_bookings.each do |booking| %>
    <div class="card-general">
      <div class="card-body">
        <h4 class="card-title"><%= link_to "#{booking.client.first_name.capitalize} #{booking.client.last_name.capitalize}", booking_shared_training_plans_path(booking) %></h4>
      </div>
    </div>
    <% end %>
  <% else %>
    <h4 class="text-muted">You don't have any clients yet.</h4>
  <% end %>
</div>
